{
  "name": "itszoes.site",
  "version": "4.0.0",
  "description": "Website for Zoe Kelly",
  "main": "index.js",
  "scripts": {
    "test": "standard && dependency-check package.json",
    "start": "node server.js",
    "build": "jalla build index.js --sw sw.js",
    "deploy": "npx now -T codeandconspire && npx now alias -T codeandconspire"
  },
  "documentify": {
    "transform": [
      [
        "./lib/document",
        {
          "order": "end"
        }
      ]
    ]
  },
  "now": {
    "alias": "itszoes.site",
    "env": {
      "NODE_ENV": "production",
      "CLOUDINARY_KEY": "@cloudinary-key",
      "CLOUDINARY_SECRET": "@cloudinary-secret",
      "PRISMIC_ITSZOESSITE_SECRET": "@prismic-itszoessite-secret",
      "CLOUDFLARE_CODEANDCONSPIRE_ZONE": "@cloudflare-codeandconspire-zone",
      "CLOUDFLARE_CODEANDCONSPIRE_EMAIL": "@cloudflare-codeandconspire-email",
      "CLOUDFLARE_CODEANDCONSPIRE_KEY": "@cloudflare-codeandconspire-key",
      "POLYFILL_FEATURES": "default-3.3,Array.prototype.find,Array.prototype.findIndex,Array.prototype.includes"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeandconspire/itszoes.site.git"
  },
  "author": "code and conspire",
  "license": "CC-BY",
  "bugs": {
    "url": "https://github.com/codeandconspire/itszoes.site/issues"
  },
  "devDependencies": {
    "choo-devtools": "^2.5.0",
    "dependency-check": "^3.1.0",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "cccpurge": "^1.4.0",
    "choo": "^6.13.3",
    "choo-meta": "^1.0.4",
    "choo-service-worker": "^2.4.0",
    "cloudinary": "^1.13.2",
    "dedent": "^0.7.0",
    "dotenv": "^6.0.0",
    "hstream": "^1.2.0",
    "jalla": "^0.12.0-7",
    "koa-body": "^4.0.4",
    "koa-compose": "^4.1.0",
    "koa-route": "^3.2.0",
    "nanolru": "^1.0.0",
    "nanoraf": "^3.0.1",
    "normalize.css": "^8.0.0",
    "postcss-custom-properties": "^8.0.10",
    "postcss-url": "^7.3.2",
    "prismic-element": "^1.0.0",
    "prismic-javascript": "^2.0.3",
    "prismic-richtext": "^0.4.0",
    "smoothscroll-polyfill": "^0.4.3"
  }
}
